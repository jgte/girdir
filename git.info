#!/bin/bash -u
#
# status repositories

DIR_HERE=$(cd "$( dirname "${BASH_SOURCE[0]}" )"; pwd)
SVN_COM="svn info -R | grep Revision: | sort | uniq &&
svn info -R | grep Date: | sort | uniq | tail -n1"
GIT_COM="git --no-pager log --pretty=format:'%C(auto)%h -%d %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --max-count=1 &&
echo"


# save and change IFS
OLDIFS=$IFS
IFS=$'\n'

for i in `cat $DIR_HERE/git.dir.list | grep -v ^#`
do
  #enfore ignore list
  SKIP=false
  if [ -e "$DIR_HERE/git.dir.list.ignore" ]
  then
    for j in `cat $DIR_HERE/git.dir.list.ignore | grep -v ^#`
    do
      if [[ ! "${i/$j/}" == "$i" ]]
      then
        SKIP=true
        break
      fi
    done
  fi
  #check if this dir is to be skipped
  [ "$SKIP" == "true" ] && continue
  #go there
  cd "$DIR_HERE/$i" || exit $?
  echo "---------------- $PWD -----------------"
  #statements
  if [[ -d .svn ]]; then
    eval $SVN_COM
  elif [[ -d .git ]]; then
    eval $GIT_COM
  else
    echo "ERROR: cannot find either .svn or .git dir. Exiting..."
    exit 3
  fi
  cd - >& /dev/null
done

# restore IFS
IFS=$OLDIFS